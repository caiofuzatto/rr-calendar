<br/>
<div class="dark-matter">
<script>
  $.notify("<%= notice %>", "success")
</script>

<h1><%= "#{t('messages.listing')} #{Kind.model_name.human(count: @kinds.count)}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= Kind.human_attribute_name("description") %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_kind_path, class: "btn btn-default"%>
<%= link_to t('buttons.back'), root_path, class: "btn btn-default"%>
</div>
