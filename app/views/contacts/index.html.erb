<div class="dark-matter">
<p id="notice"><%= notice %></p>

<h1><%= "#{t('messages.listing')} #{Contact.model_name.human(count: @contacts.count)}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= Contact.human_attribute_name("nome") %></th>
      <th><%= Contact.human_attribute_name("kind") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr style="background: <%= cycle('', 'gray')%>">
        <td><%= contact.nome %></td>
        <td><%= contact.kind.description %></td>
        <td><%= link_to t('buttons.show'), contact %></td>
        <td><%= link_to t('buttons.edit'), edit_contact_path(contact) %></td>
        <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_contact_path, class: "button"%>
</div>
